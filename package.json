{
	"name": "tcg-decky",
	"version": "0.0.1",
	"description": "TCG deck building tool",
	"main": "src/apps/scripts/main.ts",
	"type": "module",
	"scripts": {
		"start": "node src/apps/scripts/main.ts",
		"start:collection-api": "node src/apps/collection-api/hono.ts",
    	"start:deck-builder": "cd src/apps/deck-builder && ng serve",
    	"build:deck-builder": "cd src/apps/deck-builder && ng build",
		"reset-collection": "node src/apps/scripts/reset-collection-cards-database.ts",
		"extract-prebuild-decks": "node src/apps/scripts/extract-prebuild-decks-to-json.ts",
		"convert-prebuild-to-limitless": "node src/apps/scripts/convert-prebuild-to-limitless-deck-txt.ts",
		"format": "prettier . --write"
	},
	"keywords": [
		"tcg",
		"deck",
		"builder"
	],
	"author": "bengeendokter",
	"license": "MIT",
	"packageManager": "pnpm@10.24.0",
	"dependencies": {
		"@angular/common": "^21.0.0",
		"@angular/compiler": "^21.0.0",
		"@angular/core": "^21.0.0",
		"@angular/platform-browser": "^21.0.0",
		"@angular/platform-server": "^21.0.0",
		"@angular/router": "^21.0.0",
		"@angular/ssr": "^21.0.1",
		"@hono/arktype-validator": "^2.0.1",
		"@hono/node-server": "^1.19.6",
		"@tcgdex/sdk": "^2.7.1",
		"arktype": "^2.1.27",
		"hono": "^4.10.6",
		"jsdom": "^27.1.0",
		"mongodb": "^7.0.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^21.0.1",
		"@angular/cli": "^21.0.1",
		"@angular/compiler-cli": "^21.0.0",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^20.17.19",
		"prettier": "3.6.2",
		"typescript": "~5.9.2"
	}
}
